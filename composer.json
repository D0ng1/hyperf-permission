{
    "name": "donjan-deng/hyperf-permission",
    "description": "hyperf权限管理组件",
    "keywords": [
        "donjan",
        "hyperf",
        "permission",
        "permissions",
        "roles",
        "acl",
        "rbac",
        "security"
    ],
    "homepage": "https://github.com/donjan-deng/hyperf-permission",
    "license": "MIT",
    "authors": [
        {
            "name": "Donjan",
            "homepage": "https://github.com/donjan-deng",
            "role": "Developer"
        },
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "homepage": "https://spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0 || ^8.1 || ^8.2 || ^8.3",
        "ext-swoole": ">=4.5",
        "hyperf/database": "^3.1",
        "hyperf/db-connection": "^3.1",
        "hyperf/cache": "^3.1",
        "hyperf/utils": "^3.1",
        "hyperf/validation": "^3.1"
    },
    "require-dev": {
        "hyperf/testing": "~2.0"
    },
    "autoload": {
        "psr-4": {
            "Donjan\\Permission\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Donjan\\Permission\\Test\\": "tests"
        }
    },
    "extra": {
        "hyperf": {
            "config": "Donjan\\Permission\\ConfigProvider"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
